/* Mini Program/index/index.wxss */
page {
  height: 100%;
  background: #34495E;
}

.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.button{
  font-size: 32rpx;
  border: 1rpx solid #999;
  background: #8ED145;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 150rpx 0;
}

.userName {
  font-size: 32rpx;
  font-weight: bold;
  margin: 80rpx 0;
  color: aliceblue;
}

.goStudy {
  width: 220rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid yellowgreen;
  color:white;
  border-radius: 10rpx;
  box-shadow:1px 1px 1px aqua;

}